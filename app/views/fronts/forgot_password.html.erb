<div class="loginfom frontform">
<h3><%= t("general.reset_password") %></h3>
<%= form_for(@user, :url => forgot_password_path) do |f| %>

  <% if flash[:forgot_pass_error] %>
    <div class="alert-error" id="flash_msg_error">
      <%= flash[:forgot_pass_error] %>
    </div>
  <% end %>
  <% if flash[:forgot_pass_notice] %>
    <div class="alert-success" id="flash_msg_notice">
      <%= flash[:forgot_pass_notice] %>
    </div>
  <% end %>  
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, :class => "input-xxlarge" %>
  </div>

  <div class="button">
    <%= f.submit t("general.reset_password"), :class => 'btn btn-info' %>
    <%= link_to t("general.back"), '/' %>

  </div>
<div class="cl"></div>
<% end %>

<script type="text/javascript">
  $("#user_email").focus();
</script>
</div>
